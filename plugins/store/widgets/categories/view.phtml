                $subcategories = get_store_subcategories($category['id']);
                if ($subcategories): ?>
                    <ul class="<?php echo (input('category') == $category) ? 'add-slide-transition' : 'remove-slide-transition'; ?>">
                        <?php foreach ($subcategories as $sb): ?>
                            <li><a class="<?php echo (input('category') == lang($sb['title'])) ? 'active' : ''; ?>" ajax="true" href="<?php echo url_to_pager('products-categories-home', array('slugs' => $sb['id'] .'_'.toAscii(lang($category['title'])).'_' . toAscii(lang($sb['title'])))); ?>"><?php _lang($sb['title']); ?></a></li>
                        <?php endforeach; ?>
                    </ul>
                <?php endif; ?>
            </li>
        <?php endforeach ?>
    </ul>
</div>