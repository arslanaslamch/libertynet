<div class="box" id="store-categories-menu">
    <ul class="menu">
        <?php
        $categories = lp_store_categories('get_categories');
        foreach ($categories as $category): ?>
            <li class="parent">
                <a ajax="true" href="<?php echo url_to_pager('products-categories-home', array('slugs' => $category['id'] . '_' . toAscii(lang($category['title']))));?>"><?php echo lang($category['title']); ?><i style="float: right; margin-right: 5px" class="ion-plus"></i></a>
