<?php if(is_loggedIn() && isset($app->profileEvent)): ?>
    <?php $users = getEventAudience($app->profileEvent['event_id'], 1, false, $limit) ?>
        <div class="box event-audience">
    <?php if ($users): ?>
            <div class="title"><?php echo count($users) ?> <?php if (count($users) == 1){
                    echo lang('event::member')." ".lang('event::is');
