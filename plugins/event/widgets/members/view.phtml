                    echo lang('event::members')." ".lang('event::are');
                } ?>
                <?php echo lang('event::going-')?></div>
            <div class="box-content event-audience">
                <div class="users">
                    <?php foreach ($users as $user): ?>
                    <?php $user = find_user($user) ?>
